<Page>
    <Resources>
        <StyleSheet>
            <Style name="buttonStyle">
                <Setter property="titleColorForNormalState" value="{{color:theme_main_color}}" />
                <Setter property="titleLabel.font" value="{{font:secondary_font}}" />
            </Style>
            <Style name="splitLineStyle">
                <Setter property="backgroundColor" value="{{color:split_line_color}}" />
            </Style>
            
        </StyleSheet>
    </Resources>
    
    <Layout>
        <UIView id="containerView" >
            
            <UIButton id="leftButton" style="buttonStyle" clickAction="clickLeftButton:" titleForNormalState="{{string:reply_details}}">
                <Constraints>
                    <Constraint attribute="top" target="containerView" />
                    <Constraint attribute="bottom" target="containerView" />
                    <Constraint attribute="left" target="containerView"/>
                    <Constraint attribute="width" target="containerView" multipliedBy="0.5"/>
                    <Constraint attribute="height" constant="{{dimen:topic_list_cell_bar_height}}"/>
                </Constraints>
            </UIButton>
            
            <UIView id="middleSplitLine" style="splitLineStyle">
                <Constraints>
                    <Constraint attribute="top" target="leftButton" constant="{{dimen:base_content_element_small_space}}"/>
                    <Constraint attribute="bottom" target="leftButton" constant="-{{dimen:base_content_element_small_space}}"/>
                    <Constraint attribute="left" target="leftButton" targetAttribute="right"/>
                    <Constraint attribute="width" constant="0.5"/>
                </Constraints>
            </UIView>
            
            <UIButton id="rightButton" style="buttonStyle" clickAction="rightRightButton:" titleForNormalState="{{string:topic_details}}">
                <Constraints>
                    <Constraint attribute="top" target="leftButton" />
                    <Constraint attribute="bottom" target="leftButton" />
                    <Constraint attribute="left" target="middleSplitLine" targetAttribute="right"/>
                    <Constraint attribute="width" target="containerView" multipliedBy="0.5"/>
                    <Constraint attribute="height" constant="{{dimen:topic_list_cell_bar_height}}"/>
                </Constraints>
            </UIButton>
            
            <UIView id="bottomSplitLine" style="splitLineStyle">
                <Constraints>
                    <Constraint attribute="bottom" target="containerView" />
                    <Constraint attribute="left" target="containerView" />
                    <Constraint attribute="right" target="containerView" />
                    <Constraint attribute="height" constant="0.5"/>
                </Constraints>
            </UIView>
            
        </UIView>
    </Layout>
</Page>