<Page>
    <Resources>
        <StyleSheet>
            <Style name="superviewStyle">
                <Setter property="backgroundColor" value="{{color:background_color_gray}}"></Setter>
            </Style>
            <Style name="clipsViewStyle">
                <Setter property="clipsToBounds" value="YES"/>
            </Style>
            <Style name="textFieldContainerViewStyle" parent="clipsViewStyle">
                <Setter property="layer.cornerRadius" value="{{dimen:base_corner_radius}}" />
                <Setter property="layer.borderColor" value="{{color:split_line_color}}" />
                <Setter property="layer.borderWidth" value="{{dimen:base_split_line_height}}" />
            </Style>
            <Style name="inputStyle">
                <Setter property="backgroundColor" value="white"></Setter>
                <Setter property="layer.borderWidth" value="{{dimen:base_split_line_height}}"></Setter>
                <Setter property="layer.borderColor" value="{{color:theme_main_color}}"></Setter>
                <Setter property="layer.cornerRadius" value="{{dimen:base_corner_radius}}" />
            </Style>
            <Style name="textFieldStyle">
                <Setter property="font" value="{{font:secondary_font}}" />
                <Setter property="backgroundColor" value="white" />
            </Style>
            <Style name="confirmButtonStyle" parent="clipsViewStyle">
                <Setter property="backgroundColorForNormalState" value="{{color:theme_main_color}}" />
                <Setter property="layer.cornerRadius" value="{{dimen:base_corner_radius}}" />
            </Style>
            
        </StyleSheet>
    </Resources>
    
    <Layout>
        <UIView id="superView" style="superviewStyle">
            
            <UIScrollView id="contentScrollView"  mdoutlet="YES">
                <Constraints>
                    <Constraint attribute="edges" target="superView" />
                </Constraints>
                
                <UIView id="contentView" mdoutlet="YES">
                    <Constraints>
                        <Constraint attribute="left" target="contentScrollView" constant="{{dimen:base_content_element_large_space}}"/>
<!--                        <Constraint attribute="right" target="contentScrollView" constant="-{{dimen:base_content_element_large_space}}"/>-->
                        <Constraint attribute="top" target="contentScrollView" constant="{{dimen:base_content_element_large_space}}"/>
                        <Constraint attribute="width" target="contentScrollView"/>
<!--                        <Constraint attribute="bottom" target="contentScrollView" />-->
                    </Constraints>
                    
                    <UIImageView id="logo" image="{{image:reset_lock}}">
                        <Constraints>
                            <Constraint attribute="top" target="contentView" constant="{{dimen:login_logo_top}}"></Constraint>
                            <Constraint attribute="centerX" target="contentView"></Constraint>
                        </Constraints>
                    </UIImageView>
                    
                    <UIView id="pwdTextContainerView" style="inputStyle">
                        <Constraints>
                            <Constraint attribute="height" constant="{{dimen:register_view_height}}" />
                            <Constraint attribute="width" constant="{{dimen:register_view_width}}" />
                            <Constraint attribute="centerX" target="contentView" />
                            <Constraint attribute="top" target="logo" targetAttribute="bottom" constant="{{dimen:base_content_element_large_space}}" />
                        </Constraints>
                        <UITextField id="pwdTextField" placeholder="{{string:input_oldpassword}}" mdoutlet="YES">
                            <Constraints>
                                <Constraint attribute="edges" target="pwdTextContainerView"/>
                            </Constraints>
                        </UITextField>
                    </UIView>
                    
                    <UIView id="newPwdTextContainerView" style="inputStyle">
                        <Constraints>
                            <Constraint attribute="height" constant="{{dimen:register_view_height}}" />
                            <Constraint attribute="width" constant="{{dimen:register_view_width}}" />
                            <Constraint attribute="centerX" target="contentView" />
                            <Constraint attribute="top" target="pwdTextContainerView" targetAttribute="bottom" constant="{{dimen:base_content_element_large_space}}" />
                        </Constraints>
                        <UITextField id="nPwdTextField" placeholder="{{string:input_newpassword}}" mdoutlet="YES" >
                            <Constraints>
                                <Constraint attribute="edges" target="newPwdTextContainerView"/>
                            </Constraints>
                        </UITextField>
                    </UIView>
                    
                    <UIButton id="doneButton" titleForNormalState="{{string:done}}" clickAction="doneop:" enabled="NO" mdoutlet="YES" style="confirmButtonStyle">
                        <Constraints>
                            <Constraint attribute="height" constant="{{dimen:register_view_height}}" />
                            <Constraint attribute="width" constant="{{dimen:register_view_width}}" />
                            <Constraint attribute="centerX" target="contentView" />
                            <Constraint attribute="top" target="newPwdTextContainerView" targetAttribute="bottom" constant="{{dimen:base_content_element_large_space}}"/>
                            <Constraint attribute="bottom" target="contentView"/>
                        </Constraints>
                    </UIButton>
                    
                    
                </UIView>
            </UIScrollView>
            
            
        </UIView>
    </Layout>
</Page>

