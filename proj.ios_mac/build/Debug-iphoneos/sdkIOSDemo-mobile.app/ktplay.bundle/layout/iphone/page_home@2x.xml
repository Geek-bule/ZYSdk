<Page>
    <Resources>
        <StyleSheet>
        </StyleSheet>
    </Resources>
    
    <Layout>
        <UIView id="superView" >
            <UIScrollView id="homeScrollView" mdoutlet="YES" showsHorizontalScrollIndicator="NO" showsVerticalScrollIndicator="NO">
                <Constraints>
                    <Constraint attribute="edges" target="superView"></Constraint>
                    <Constraint attribute="width" target="superView"></Constraint>
                </Constraints>
                
                <UIView id="contentView" >
                    <Constraints>
                        <Constraint attribute="edges" target="homeScrollView" />
                        <Constraint attribute="width" target="homeScrollView" />
                    </Constraints>
                    
                    <KTHomeAdBanner id="adView0" mdoutlet="YES">
                         <Constraints>
                        <Constraint attribute="top" target="contentView" />
                        <Constraint attribute="left" target="contentView" />
                        <Constraint attribute="right" target="contentView"/>
                        <Constraint attribute="height" constant="0"  priority="medium" mdoutlet="YES"  id="adView0ConstraintsZero"/>
                         </Constraints>

                    </KTHomeAdBanner>
                    <!--置顶话题 -->
                    <UIView id="topWrapperView">
                        <Constraints>
                            <Constraint attribute="top" target="adView0"  targetAttribute="bottom"/>
                            <Constraint attribute="left" target="contentView" />
                            <Constraint attribute="right" target="contentView"/>
                            <Constraint attribute="height" constant="{{dimen:home_top_height}}"/>
                        </Constraints>
                        
                        <KTPageContralScrollView id="pageContralScrollView" mdoutlet="YES">
                            <Constraints>
                                <Constraint attribute="edges" target="topWrapperView"/>
                            </Constraints>
                        </KTPageContralScrollView>

                    </UIView>
                    
                    <KTHomeAdBanner id="adView1" mdoutlet="YES">
                        <Constraints>

                        <Constraint attribute="top" target="topWrapperView"  targetAttribute="bottom" />
                        <Constraint attribute="left" target="contentView" />
                        <Constraint attribute="right" target="contentView"/>
                        <Constraint attribute="height" constant="0"  priority="medium" mdoutlet="YES"  id="adView1ConstraintsZero"/>
                        </Constraints>

                    </KTHomeAdBanner>
                    
                    <!-- 视频 -->
                    <UIView id="videoWrapView" mdoutlet="YES">
                        <Constraints>
                            <Constraint attribute="top" target="adView1" targetAttribute="bottom"/>
                            <Constraint attribute="left" target="contentView" />
                            <Constraint attribute="right" target="contentView" />
                        </Constraints> 
                        
                    </UIView>
                   
                   
                   <KTHomeAdBanner id="adView2" mdoutlet="YES">
                       <Constraints>

                       <Constraint attribute="top" target="videoWrapView"  targetAttribute="bottom" />
                       <Constraint attribute="left" target="contentView" />
                       <Constraint attribute="right" target="contentView"/>
                       <Constraint attribute="height" constant="0"  priority="medium" mdoutlet="YES"  id="adView2ConstraintsZero"/>
                       </Constraints>

                   </KTHomeAdBanner>
                   

                    <!-- 专题 -->
                    <UIView id="collectionWrapView" mdoutlet="YES">
                        <Constraints>
                            <Constraint attribute="top" target="adView2" targetAttribute="bottom" />
                            <Constraint attribute="left" target="contentView" />
                            <Constraint attribute="right" target="contentView" /> 
                        </Constraints>
                        
                    </UIView>
                    
                    <KTHomeAdBanner id="adView3" mdoutlet="YES">
                        <Constraints>

                        <Constraint attribute="top" target="collectionWrapView"  targetAttribute="bottom"/>
                        <Constraint attribute="left" target="contentView" />
                        <Constraint attribute="right" target="contentView"/>
                        <Constraint attribute="height" constant="0"  priority="medium" mdoutlet="YES"  id="adView3ConstraintsZero"/>
                        </Constraints>

                    </KTHomeAdBanner>
                    
                    <!-- 热图-->
                    <UIView id="hotPicWrapView" mdoutlet="YES">
                        <Constraints>
                            <Constraint attribute="top" target="adView3" targetAttribute="bottom"/>
                            <Constraint attribute="left" target="contentView" />
                            <Constraint attribute="right" target="contentView" />
                        </Constraints>
                    </UIView>
                    
                    <KTHomeAdBanner id="adView4" mdoutlet="YES">
                        
                        <Constraints>

                        <Constraint attribute="top" target="hotPicWrapView"  targetAttribute="bottom"/>
                        <Constraint attribute="left" target="contentView" />
                        <Constraint attribute="right" target="contentView"/>
                        <Constraint attribute="height" constant="0"  priority="medium" mdoutlet="YES"  id="adView4ConstraintsZero"/>
                        </Constraints>

                    </KTHomeAdBanner>
                    
                    <!-- 推荐游戏-->
                    <UIView id="gamesWrapView" mdoutlet="YES">
                        <Constraints>
                            <Constraint attribute="top" target="adView4" targetAttribute="bottom"/>
                            <Constraint attribute="left" target="contentView" />
                            <Constraint attribute="right" target="contentView"/>
                        </Constraints>
                        
                    </UIView>
                    
                    <KTHomeAdBanner id="adView5" mdoutlet="YES">
                        
                        <Constraints>

                        <Constraint attribute="top" target="gamesWrapView"  targetAttribute="bottom" />
                        <Constraint attribute="left" target="contentView" />
                        <Constraint attribute="right" target="contentView"/>
                        <Constraint attribute="height" constant="0"  priority="medium" mdoutlet="YES"  id="adView5ConstraintsZero"/>
                        </Constraints>

                    </KTHomeAdBanner>
                    
                    <!-- 活跃用户-->
                    <UIView id="activeUserWrapView" mdoutlet="YES">
                        <Constraints>
                            <Constraint attribute="top" target="adView5" targetAttribute="bottom" />
                            <Constraint attribute="left" target="contentView" />
                            <Constraint attribute="right" target="contentView"/>
                        </Constraints>
                    </UIView>
                    
                    <KTHomeAdBanner id="adView6" mdoutlet="YES">
                        <Constraints>

                        <Constraint attribute="top" target="activeUserWrapView"  targetAttribute="bottom"/>
                        <Constraint attribute="left" target="contentView" />
                        <Constraint attribute="right" target="contentView"/>
                        <Constraint attribute="bottom" target="contentView"/>
                        <Constraint attribute="height" constant="0"  priority="medium" mdoutlet="YES"  id="adView6ConstraintsZero"/>

                        </Constraints>

                    </KTHomeAdBanner>

                </UIView>
            </UIScrollView>
        </UIView>

    </Layout>
</Page>

